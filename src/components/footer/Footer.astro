---
import logo from "../../assets/Untitled-1 1.png"
import facebookImg from "../../assets/Facebook.png"
import twitterImg from "../../assets/Twitter.png"
import linkedinImg from "../../assets//Linkind.png"
import instagramImg from "../../assets/Instagram.png"
---

<main class="my-10 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-x-4 gap-y-10">
    <!-- col-1 -->
    <section class="space-y-4">
        <img src={logo.src} alt="logo" class="md:w-32">
        <p class="text-gray-400">Lorem, ipsum dolor sit amet consectetur adipisicing elit.</p>
        <div class="flex items-center gap-4">
            <img src={facebookImg.src} alt="facebook">
            <img src={twitterImg.src} alt="twitter">
            <img src={linkedinImg.src} alt="linkedin">
            <img src={instagramImg.src} alt="instagram">
        </div>
    </section>
    <!-- col-2 -->
    <section class="space-y-4">
        <h2 class="text-2xl font-bold">Opening Hours</h2>
        <div class="text-gray-400">
            <p>Saturday: 09:00am - 10:00pm</p>
            <p>Thursday: 09:00am - 11:00pm</p>
            <p>Friday: 09:00am - 8:00pm</p>
        </div>
    </section>

    <!-- col-3 -->
    <section class="space-y-4">
        <h2 class="text-2xl font-bold">User Link</h2>
        <ul class="text-gray-400">
            <a href="#home" class=" font-semibold hover:underline hover:text-gray-600">
              <li>Home</li>
            </a>
            <a href="#menu" class=" font-semibold hover:underline hover:text-gray-600">
              <li>Menu</li>
            </a>
            <a href="#services" class="hover:underline hover:text-gray-600 font-semibold">
              <li>Services</li>
            </a>
            <a href="#shop" class="hover:underline hover:text-gray-600 font-semibold">
              <li>Shop</li>
            </a>
          </ul>
    </section>

        <!-- col-4 -->
        <section class="space-y-4">
            <h2 class="text-2xl font-bold">Contact Us</h2>
            <div class="text-gray-400">
                <p>1234 Country Club ave</p>
                <p>Washington, D.C, DC, USA</p>
                <p>+0123 456 789</p>
            </div>
        </section>
</main>